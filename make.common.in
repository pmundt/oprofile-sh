# programs
AR=ar
LD=@LD@
CC=@CC@
CXX=@CXX@
TOUCH=touch
INSTALL=install
MKDIR_P=mkdir -p

# paths
TOPDIR=@topdir@
prefix=$(DESTDIR)@prefix@
exec_prefix=@exec_prefix@
BINDIR=$(DESTDIR)@bindir@
 
# config
INCLUDES=-I$(TOPDIR)/  -I$(TOPDIR)/libutil  -I$(TOPDIR)/libop -I$(TOPDIR)/libdb @extra_includes@
 
CFLAGS += $(INCLUDES)
CFLAGS += -W -Wall -Wstrict-prototypes -Wunused -Wshadow -Wmissing-prototypes -Winline 
CFLAGS += -pipe @CFLAGS@
 
CXXINCLUDES=@CXXINCLUDES@ -I$(TOPDIR)/libopt++ -I$(TOPDIR)/libutil++ -I$(TOPDIR)/libop++
CXXFLAGS += $(INCLUDES) $(CXXINCLUDES)
CXXFLAGS += -W -Wall -Wunused -Wmissing-prototypes
CXXFLAGS += -pipe @CXXFLAGS@
#CXXFLAGS += -D__STL_DEBUG -I/usr/src/STLport-4.5.3/stlport

# enable -Werror for non-release versions except for gcc 2.91
ifneq (,$(findstring cvs,@VERSION@))
CFLAGS += -Werror
CXXFLAGS += -Werror
endif 
 
LDFLAGS += -L$(TOPDIR)/libutil++ -L$(TOPDIR)/libutil -L$(TOPDIR)/libop++ -L$(TOPDIR)/libop \
	-L$(TOPDIR)/libdb -L$(TOPDIR)/libopt++ @extra_libraries@
#LDFLAGS += -L/usr/src/STLport-4.5.3/lib -lstlport_gcc_stldebug -lstlport_gcc -lpthread -lm
 
.PHONY: all clean srcdoc install uninstall
