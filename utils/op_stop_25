# FIXME: support different base dir ??
 
echo "Note: op_stop is deprecated. Please use opcontrol --stop or opcontrol --shutdown" >&2
 
if [ "$UID" != "0" ]; then
	echo "Must be root to stop profiling." >&2
	exit 1
fi
 
if test -f /var/lib/oprofile/lock; then
	echo "Stopping profiling."
	echo 0 >/dev/oprofile/enable
fi

# if profiler is not started consider as ok to try to stop it.
exit 0
