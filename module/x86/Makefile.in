OPROFILE_DIR=@OPROFILE_DIR@
VERSION=@VERSION@
KVERS=@KVERS@
KSRC=@KSRC@

EXTRA_CFLAGS=@EXTRA_CFLAGS_MODULE@ @EXTRA_CFLAGS@ -D__NO_VERSION__ \
	-I$(OPROFILE_DIR)/ -I$(OPROFILE_DIR)/libutil -I$(OPROFILE_DIR)/libop -I$(OPROFILE_DIR)/module
 
USE_STANDARD_AS_RULE=1
 
# enable -Werror for non-release versions except for on 2.5 kernels
ifneq (,$(findstring cvs,$(VERSION)))
ifeq (,$(findstring 2.5,$(KVERS)))
EXTRA_CFLAGS += -Werror
endif
endif

# NB: do not add a file here without adding it to EXTRA_DIST in ../Makefile.am

O_TARGET := arch.o

obj-y := cpu_type.o op_apic.o op_fixmap.o op_rtc.o op_nmi.o \
	op_model_ppro.o op_model_athlon.o op_model_p4.o 

ifeq "@BUILD_HAMMER@" "yes"
obj-y += hammer_oprofile_nmi.o hammer_op_syscalls.o hammer_entry.o hammer_ia32entry.o
EXTRA_CFLAGS += -D__KERNEL__ -mcmodel=kernel 
else
obj-y += oprofile_nmi.o op_syscalls.o
endif

obj-m := $(O_TARGET)
O_OBJS := $(obj-y)
M_OBJS := $(O_TARGET)

TOPDIR := $(KSRC)
CONFIG_SHELL := TOPDIR=$(KSRC) /bin/bash
include $(KSRC)/Rules.make

